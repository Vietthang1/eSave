<% layout('../layouts/blank_layout') %>
<div class="col-lg-12">
	<form action="login" method="post" class="col-lg-3 col-lg-push-4" >
		<div class="form-group text-input-group">
			<input name="username" type="username" class="form-control" placeholder="Tài khoản" />
			<input name="password" type="password" class="form-control" placeholder="Mật khẩu" />
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-success btn-block" value="Đăng nhập" />
			<a href="/register" class="btn-block text-center">Bạn chưa có tài khoản? Hãy đăng ký</a>
		</div>
	</form>
</div>
